<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ponomarevigor.androidgames.mytimetracker">

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MainApplication"
        >
        <activity
            android:name=".Test.StartActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Test.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".User.UserActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".Task.TaskActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>


        <activity
            android:name=".TaskEdit.TaskEditActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:windowSoftInputMode="stateHidden|stateVisible|adjustResize"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".Project.ProjectActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".Project.ProjectCreateActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:windowSoftInputMode="stateHidden|stateVisible|adjustResize"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".Project.ProjectEditActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:windowSoftInputMode="stateHidden|stateVisible|adjustResize"
            android:label="@string/app_name">
        </activity>
        
        <activity
            android:name=".Workspace.WorkspaceActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".Workspace.WorkspaceEditActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:windowSoftInputMode="stateHidden|stateVisible|adjustResize"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".ProjectInfo.ProjectInfoActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

    </application>
</manifest>