<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#DDDDDD"
    android:paddingTop="0.6dp"
    android:paddingBottom="0.6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_red_light">

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/image"
            android:text="Delete"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/deletewhite"
            app:srcCompat="@android:drawable/ic_menu_delete" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/frontLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/layoutClickable"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="-16dp"
            android:layout_marginRight="-16dp"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="-18dp">
        </RelativeLayout>

        <TextView
            android:id="@+id/tvNameTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ibActive"
            android:text="Name"
            android:maxLength="24"
            android:gravity="center_vertical"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDescriptionTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameTask"
            android:layout_toStartOf="@+id/ibActive"
            android:text="Project"
            android:maxLength="24"
            android:gravity="center_vertical"
            android:textSize="14sp" />

        <Chronometer
            android:id="@+id/tvTimeTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescriptionTask"
            android:layout_toStartOf="@+id/ibActive"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ibActive"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/ibFinish"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/start" />

        <ImageButton
            android:id="@+id/ibFinish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ibActive"
            android:layout_marginEnd="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/stop" />

        <ImageView
            android:id="@+id/imageIndicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="-16dp"
            android:layout_marginRight="-16dp"
            android:layout_marginTop="-16dp"
            android:layout_marginBottom="-16dp"/>

        <ImageView
            android:id="@+id/imageIndicator1"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_red_light" />
</RelativeLayout>