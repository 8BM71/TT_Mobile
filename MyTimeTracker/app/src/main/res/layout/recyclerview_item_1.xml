<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="80dp">

        <TextView
            android:id="@+id/tvNameTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAlignment="viewStart"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDescriptionTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameTask"
            android:text="Description"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvTimeTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescriptionTask"

            android:text="00:00:00"
            android:textAlignment="viewStart"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/ibActive"
            android:layout_width="29sp"
            android:layout_height="29sp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/start"
            android:layout_below="@+id/tvDescriptionTask"
            android:layout_alignParentStart="true"
            android:layout_marginStart="123dp" />



        <ImageButton
            android:id="@+id/ibFinish"
            android:layout_width="29sp"
            android:layout_height="29sp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/stop"
            android:layout_below="@+id/tvDescriptionTask"
            android:layout_toEndOf="@+id/ibActive"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

</LinearLayout>